.top-nav {
  width: 100%;
  height: 79rpx;
  padding: 0 10%;
  background: #fff;
  border-bottom: 0.5pt solid rgba(0, 0, 0,0.1);
  position: relative;
}
.top-select {
  position: absolute;
  left: 50%;
  bottom: 20%;
  transform: translateX(-50%);
  z-index: 999;
}
.top-text {
  position: absolute;
  right: 5%;
  bottom: 15%;
  color: #999;
  font-size: 20rpx;
}
.com-select-box{
  color: #4D9BFA;
  position: relative;
}
.com-select-box::after {
  content: '';
  width: 30%;
  height: 4rpx;
  background: #4D9BFA;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -55%;
}

